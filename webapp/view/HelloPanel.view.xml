<mvc:View controllerName="vinibar.walkthrough.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button press=".onShowHello" text="Show Hello" class="myCustomButton"/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<Text text="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
		</content>
	</Panel>
</mvc:View>